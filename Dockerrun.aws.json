{
    "AWSEBDockerRunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "eugocker/fibseq-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "eugocker/fibseq-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "eugocker/fibseq-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "eugocker/fibseq-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort" : 80,
                    "containerPort" : 80    
                }
            ],
            "links": [
                "client", "server"
            ]
        }
    ]
}